page {
    height: 100%;
    background-color: #f4f4f4;
}

.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.content {
    display:flex;
    flex-direction:column;
    border-radius:10rpx;
    background:rgba(255,255,255,1);
    margin-top: 20rpx;
}
.header {
    height: 40rpx;
    border-bottom: 2rpx solid #E5E5E5;
    font-size:20rpx;
    font-weight:400;
    line-height: 42rpx;
    padding-left: 24rpx;
    color:rgba(1,1,1,1);
}
.item {
    width:720rpx;
    height:215rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.item>image {
    width:265rpx;
    height:191rpx;
    border-radius:10rpx;
    margin-left: 33rpx;
}
.item .right {
    width: 400rpx;
    height: 215rpx;
    font-size:20rpx;
    font-weight:400;
    color:rgba(147,149,151,1);
    line-height:1.7;
    display:flex;
    flex-direction:column;
    justify-content: space-around;
}
.right .title {
    font-size:24rpx;
    font-weight:400;
    color:rgba(12,12,12,1);
}
.right .btns {
    display:flex;
    flex-direction:row;
    justify-content: space-between;
    align-items: center;
    font-size: 20rpx;
}
.pay {
    width:92rpx;
    height:41rpx;
    border:1px solid #959595;
    border-radius:11rpx;
    display:flex;
    justify-content: center;
    align-items: center;
    margin-right: 23rpx;
    color:#858585;
    box-sizing:border-box;
}
