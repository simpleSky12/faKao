page {
    height: 100%;
    background-color: #f4f4f4;
}
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.item {
    margin-top: 20rpx;
    width:720rpx;
    height:215rpx;
    background:rgba(255,255,255,1);
    border-radius:10rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.item>image {
    width:265rpx;
    height:191rpx;
    border-radius:10rpx;
    margin-left: 33rpx;
}
.item .right {
    width: 375rpx;
    height: 200rpx;
    font-size:20rpx;
    font-weight:400;
    color:rgba(147,149,151,1);
    line-height:24rpx;
    display:flex;
    flex-direction:row;
    justify-content: space-around;
}
.right .title {
    font-size:34rpx;
    font-weight:400;
    color:rgba(12,12,12,1);
}

.middle {
    display:flex;
    flex-direction:column;
    justify-content: space-around;
    align-items: flex-start;
    width: 200rpx;
}

.right .btns {
    display:flex;
    flex-direction:row;
    justify-content: flex-end;
    align-items: flex-end;
    font-size: 20rpx;
    margin-bottom: 30rpx;
}

.btn {
    min-width:102rpx !important;
    height:41rpx !important;
    font-size: 20rpx !important;
    margin-right: 14rpx;
    color: #FFFEFE;
}

.order {
    background-color: #FE5656 !important;
}

.noLesson {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size:24rpx;
    font-weight:400;
    color:rgba(122,122,122,1);
    margin-top: 250rpx;
}
.noLesson image {
    width:257rpx;
    height:257rpx;
    border-radius:50%;
    display: flex;
    margin-bottom: 31rpx;
}
