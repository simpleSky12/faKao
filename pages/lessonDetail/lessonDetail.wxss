/* pages/lessonDetail/lessonDetail.wxss */
page {
    background-color: #eeeeee;
}
.container {
    width: 100%;
}
.container>image {
    width: 100%;
    height:387rpx;
}

.content {
    height: 95rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    background-color: #ffffff;
    margin-top: -10rpx;
}
.content .left {
    margin-left: 28rpx;
    display:flex;
    flex-direction:column;
}
.content .left>span {
    font-size:24rpx;
    font-weight:400;
    line-height:32rpx;
}
.content .right {
    display:flex;
    flex-direction:column;
    margin-right: 28rpx;
    background-color: #fff;
}
.content .right>span{
    height:19rpx;
    font-size:20rpx;
    font-weight:500;
    color:rgba(178,178,178,1);
    line-height:32rpx;
}

.btn {
    width: 100%;
    height:94rpx;
    background:rgba(255,255,255,1);
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    position: fixed;
    bottom: 0;
}
.btn .left {
    margin-left: 24rpx;
    width: 205rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.btn .left span {
    color: #010101;
    font-size: 20rpx;
    line-height: 1;
}
.btn .left view {
    display:flex;
    flex-direction:column;
    align-items: center;
}
.btn .right {
    width: 380rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-right: 25rpx;
}

.like {
    width: 80rpx;
    height: 68rpx;
    justify-content: space-between;
    background-color: #fff;
}
.likeIcon {
    width:40rpx;
    height:35rpx;
}
