page {
    background-color: #f4f4f4;
}

.checkbox {
    background-color: #fff;
    width:713rpx !important;
    height:171rpx;
    margin: 20rpx auto;
    border-radius: 16rpx;
    box-sizing: border-box;
    padding-left: 18rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    position: relative;
}

.icon {
    width: 32rpx;
    height: 32rpx
}
.selectedIcon{
    position: absolute;
    z-index: 999;
    left: 19rpx;
    top: 50%;
    margin-top: -19rpx;
}
.slot {
    width: 635rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.checkbox-img {
    width:268rpx;
    height:152rpx;
    border-radius:10rpx;
}
.right {
    height: 152rpx;
    width:346rpx;
    display:flex;
    flex-direction:column;
    justify-content: space-between;
}
.right text:first-child {
    font-size: 40rpx;
    font-weight:400;
    color:rgba(12,12,12,1);
}
.right text:nth-child(2) {
    width: 346rpx;
    font-size:20rpx;
    font-weight:400;
    color:rgba(147,149,151,1);
    line-height:24rpx;
}
.footer {
    position: fixed;
    bottom: 0;
    height: 120rpx;
    width: 100%;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding-left: 23rpx;
    padding-right: 38rpx;
}
.footer .img {
    margin-left: -4rpx;
    display: block;
    margin-bottom: 4px;
}
.total {
    width: 160rpx;
}
.total text {
    font-size:24rpx;
    font-weight:400;
    color:rgba(132,133,133,1);
    line-height:1;
}
.totalText {
    font-size:24rpx;
    font-weight:400;
    color:rgba(0,0,0,1);
    line-height:1;
}

.noLesson {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size:24rpx;
    font-weight:400;
    color:rgba(122,122,122,1);
    margin-top: 250rpx;
}
.noLesson image {
    width:257rpx;
    height:257rpx;
    border-radius:50%;
    display: flex;
    margin-bottom: 31rpx;
}
